


<% if @event.users.count != 0 %>

	<div class="container evinfo mx-auto">
	  <h3>Pour l'instant, tu as <%= @event.users.count %> participant(s)</h3>
	</div>

	<table class="table table-striped container">
	  <thead>
	    <tr>
	    	<th scope="col"></th>
	      <th scope="col">Nom</th>
	      <th scope="col">Adresse mail</th>
	      <th></th>
	    </tr>
	  </thead>
	  <tbody>
	  	 <% i = 1 %>
	    <% @event.users.each do |user| %> 
	        <tr>
	          <th scope="row"><%= i %></th>
	            <td> <%= link_to "#{user.first_name} #{user.last_name}", user_path(user.id) %> </td>
	            <td> <%= user.email %> </td>
	            <td> <%= link_to "Voir le profil du participant", user_path(user.id) %> </td>
	            <%i += 1 %>
	          </th>
	        </tr>
	    <% end %>
	  </tbody>
	</table>

	<div class="container-fluid">
	  <div class="button-show butprof">
	    <div class="button">
	      <a href="<%= edit_event_path(@event.id)%>" class="btn btn-warning btn-lg"> Editer l'event </a>
	    </div>
	    <div class="button">
	      <a class="btn btn-warning btn-lg" <%= link_to "Supprimer l'event", event_path(@event.id), :method => "delete" %> </a>
	    </div>
	  </div>
	</div>

<% else %>

