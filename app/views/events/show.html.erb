<div class="container show">

  <div class="card mx-auto" style="width: 30rem">

    <div class="card-header">
      <h5 class="card-title"><%= @event.title %></h5>
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= @event.description %>
      </li>
      <li class="list-group-item">Participants: <%= @event.users.count %>
      </li>  
      <li class="list-group-item">Organisateur: <%= @event.admin.email %>
      </li>
      <li class="list-group-item">Lieu: <%= @event.location%>
      </li>
      <li class="list-group-item">Prix: <%= @event.price%> euros
      </li>

    </ul>
  </div>
</div>


<% if current_user != @event.admin && @event.users.include?(current_user) == false %>
    

    <div class=" container button">
          <a href="<%= new_event_attendance_path(@event.id) %>" class="btn btn-warning btn-lg"> Participer </a>
    </div>
<% end %>

<% if current_user == @event.admin %>
  <div class=" container button">
        <a href="<%= event_attendances_path(@event.id) %>" class="btn btn-warning btn-lg">Liste des participants </a>
  </div>
<% end %>


