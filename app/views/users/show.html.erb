




<% if @user == current_user %>
<div class="container-fluid">
  <div class="button-show butprof">
    <div class="button">
      <a href="#" class="btn btn-warning btn-lg"> Editer mon profil </a>
    </div>
    <div class="button">
      <a href="<%= edit_user_registration_path %>" class="btn btn-warning btn-lg">Modifier mon email et/ou mon mot de passe </a>
    </div>
  </div>
</div>
<% end %>



<div class="container profil">

  <div class="card mx-auto" style="width: 30rem">

    <div class="card-header">
      <h5 class="card-title"> Ton Profil</h5>
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item">Pr√©nom: <%= @user.first_name %>
      </li>
      <li class="list-group-item">Nom: <%= @user.last_name %>
      </li>  
      <li class="list-group-item">Description: <%= @user.description %>
      </li>
      <li class="list-group-item">Email: <%= @user.email%>
      </li>

    </ul>
  </div>
</div>


<div class="container event">
  <div class="row">
    <% @user.events.each do |event| %>

      <div class="col-lg-4 ev">
        <div class="card" style="width: 20rem">
          <%= image_tag("event.jpeg", :size => "320x220") %>

          <div class="card-body">
            <h5 class="card-title"><%= link_to "#{event.title}", event_path(event.id)%></h5>
            <p class="card-text"><%= event.start_date %> </p>
          </div>

        </div>
      </div>

    <% end %>
  </div>
</div>

  
 





