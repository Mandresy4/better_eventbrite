
<div class="container evinfo mx-auto">
  <h3>Bienvenue <%= @user.first_name %> sur ton profil</h3>
</div>

<div class="container show">

  <div class="card mx-auto" style="width: 30rem">

    <div class="card-header">
      <h5 class="card-title"> Ton Profil</h5>
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item">Prénom: <%= @user.first_name %>
      </li>
      <li class="list-group-item">Nom: <%= @user.last_name %>
      </li>  
      <li class="list-group-item">Description: <%= @user.description %>
      </li>
      <li class="list-group-item">Email: <%= @user.email %>
      </li>

    </ul>
  </div>
</div>

<% if @user == current_user %>
<div class="container-fluid">
  <div class="button-show butprof">
    <div class="button">
      <a href="<%= edit_user_path(current_user.id)%>" class="btn btn-warning btn-lg"> Editer mon profil </a>
    </div>
    <div class="button">
      <a href="<%= edit_user_registration_path %>" class="btn btn-warning btn-lg">Modifier mon email et/ou mon mot de passe </a>
    </div>
  </div>
</div>

  <% if @events != nil %>

    <div class="container event">
      <div class="row">
        <% @events.each do |event| %>

          <div class="col-lg-4 ev">
            <%= image_tag("event.jpeg", :size => "240x240", :class => "rounded-circle") %>
            <div class="container evtxt">
              <h5><%= link_to "#{event.title}", event_path(event.id)%></h5>
              <p><%= event.start_date %> </p>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  <% else %>

   <h5 class="card-title">Tu n'as pas encore créé d'event!</h5>

  <% end %>
<% end %>




  
 





