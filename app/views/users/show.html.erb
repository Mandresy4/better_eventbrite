


<div class="container">

  <div class="card mx-auto" style="width: 30rem">

    <div class="card-body">
      <h4 class="card-title"> <%= @user.last_name %></h4>
    </div>

    <div class="card-body">
      <h4 class="card-title"> %></h4>
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item">Prénom: <%= @user.first_name %>
      </li>
      <li class="list-group-item">Nom: <%= @user.last_name %>
      </li>  
      <li class="list-group-item">Description: <%= @user.description %>
      </li>
      <li class="list-group-item">Email: <%= @user.email%>
      </li>

    </ul>

    <div class="card-body">
      <% @user.events.each do |event| %>
        
        <div class="sepgoss">
          <a href="<%= event_path(event.id) %>" class="list-group-item list-group-item-action list-group-item-success">
            Event créé: <%= event.title %>
            </br>
          </a>
        </div>

      <% end %>
    </div>

  </div>

</div>



